{
    "name": "exonov-quantum",
    "version": "1.2.0",
    "private": true,
    "description": "Exonov Quantum - Plateforme révolutionnaire de simulation quantique avec intégration n8n et workflows automatisés",
    "author": "HADAMS - Exonov Quantum Team",
    "homepage": "https://quantum.exonovnow.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/exonov/ExoQuanta"
    },
    "keywords": [
        "quantum-computing",
        "quantum-simulation",
        "physics",
        "exonov",
        "quantum-algorithms",
        "qubits",
        "hadamard",
        "grover",
        "shor-algorithm",
        "quantum-teleportation",
        "n8n-workflows",
        "quantum-dashboard",
        "nextjs",
        "react",
        "tailwindcss",
        "netlify",
        "github-actions"
    ],
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "type-check": "tsc --noEmit",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "clean": "rm -rf .next out",
        "analyze": "ANALYZE=true npm run build",
        "test": "echo \"Tests à implémenter\" && exit 0",
        "deploy": "npm run build && netlify deploy --prod --dir=out",
        "dev:debug": "NODE_OPTIONS='--inspect' next dev",
        "postbuild": "echo \"Build terminé avec succès pour Exonov Quantum\"",
        "precommit": "npm run lint:fix && npm run format"
    },
    "dependencies": {
        "@netlify/blobs": "^8.2.0",
        "next": "15.4.6",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "framer-motion": "^11.0.0",
        "lucide-react": "^0.445.0",
        "clsx": "^2.1.0",
        "tailwind-merge": "^2.2.0"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4.0.15",
        "@types/node": "^20.11.0",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "eslint": "8.57.1",
        "eslint-config-next": "15.4.6",
        "eslint-config-prettier": "^9.1.0",
        "postcss": "^8.4.36",
        "prettier": "^3.2.0",
        "prettier-plugin-tailwindcss": "^0.5.0",
        "tailwindcss": "^4.0.15",
        "typescript": "^5.3.0"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "printWidth": 100,
        "plugins": ["prettier-plugin-tailwindcss"]
    },
    "eslintConfig": {
        "extends": [
            "next/core-web-vitals",
            "prettier"
        ],
        "rules": {
            "react/no-unescaped-entities": "off",
            "@next/next/no-page-custom-font": "off"
        }
    },
    "next": {
        "experimental": {
            "optimizePackageImports": [
                "lucide-react",
                "framer-motion"
            ]
        }
    },
    "packageManager": "npm@10.0.0"
}
